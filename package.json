{
  "name": "@tufan-io/simple-ci",
  "version": "0.2.20",
  "private": false,
  "description": "",
  "keywords": [],
  "homepage": "https://github.com/tufan-io/simple-ci#readme",
  "bugs": {
    "url": "https://github.com/tufan-io/simple-ci/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tufan-io/simple-ci.git"
  },
  "license": "Apache-2.0",
  "author": "tufan.io",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "config-simple-ci": "./dist/index.js"
  },
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist",
    "docs",
    "templates"
  ],
  "scripts": {
    "build": "npm-run-batch",
    "changelog": "conventional-changelog -p angular -i docs/CHANGELOG.md -s",
    "check-coverage": "nyc check-coverage -x .tmp",
    "check-run-scripts": "run-batch",
    "checks": "run-batch",
    "clean": "rimraf dist .nyc_output coverage *.tsbuildinfo",
    "cloc": "run-batch",
    "cloc-md": "cloc --exclude-dir=test --quiet --sum-one --hide-rate --unix --by-file --md --out=docs/cloc.md ./src",
    "cloc-report": "cloc --exclude-dir=test --quiet --sum-one --hide-rate --unix --out=docs/cloc.report ./src",
    "cloc_": "cloc --exclude-dir=test --quiet --sum-one --hide-rate --unix ./src",
    "commit": "git-cz",
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "dep-check": "dependency-check . --missing",
    "dependency-upgrade": "run-batch",
    "ensure-bins": "which npm-check git-cz",
    "format": "tsfmt -r",
    "git-add_": "git add .",
    "git-commit-upgrade_": "git diff-index --quiet HEAD || git commit -m \"chore: ðŸ¤– updating dependencies\"",
    "lint": "tslint -c tslint.json --project ./tsconfig.json --format stylish",
    "no-circular-deps": "madge --circular dist/index.js",
    "no-mods": "git-mods",
    "npm-check_": "npm-check -y",
    "nyc-report": "nyc report --reporter=text-summary",
    "pkg-ok": "pkg-ok",
    "postversion": "run-batch",
    "prepublishOnly": "run-batch",
    "pre-commit-hook": "run-batch",
    "pre-push-hook": "run-batch",
    "qt": "npm-run-batch",
    "secure": "npm audit",
    "sh": "npm-sh",
    "snapshots": "cross-env NODE_ENV=test ava --verbose --update-snapshots",
    "sort-package-json": "sort-package-json",
    "staged-mods-ok": "git-mods --staged_ok",
    "test": "cross-env NODE_ENV=test nyc -r lcov -r text-summary -r json-summary ava --verbose",
    "test-no-cover": "cross-env NODE_ENV=test ava --verbose",
    "todos": "leasot --exit-nicely --skip-unsupported ./src",
    "todos-md": "leasot --exit-nicely --skip-unsupported --reporter markdown ./src> ./docs/TODOs.md",
    "upgrade_": "npm upgrade"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run pre-commit-hook",
      "pre-push": "npm run pre-push-hook"
    }
  },
  "config": {
    "commitizen": {
      "changelog": {
        "disableEmoji": true
      },
      "path": "git-cz"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "ava": {
    "files": [
      "dist/**/test.js",
      "dist/**/test/**/*.js",
      "!dist/**/test/fixtures/**/*.js",
      "!dist/**/helpers/**",
      "!.tmp"
    ]
  },
  "nyc": {
    "exclude": [
      "**/test/**",
      "**/helpers/**",
      ".tmp/**"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "watermarks": {
      "branches": [
        100,
        100
      ],
      "functions": [
        100,
        100
      ],
      "lines": [
        100,
        100
      ],
      "statements": [
        100,
        100
      ]
    }
  },
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/fs-extra": "^8.1.0",
    "@types/inquirer": "^6.5.0",
    "@types/node": "^13.13.2",
    "ava": "^3.7.1",
    "cloc": "^2.5.1",
    "commitizen": "^4.0.3",
    "commitlint": "^8.3.5",
    "conventional-changelog-cli": "^2.0.28",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.0.2",
    "dependency-check": "^4.1.0",
    "fast-deep-equal": "^3.1.1",
    "fs-extra": "^9.0.0",
    "git-mods": "^1.0.10",
    "graceful-fs": "^4.2.3",
    "husky": "^4.2.5",
    "inquirer": "^7.1.0",
    "leasot": "^10.2.0",
    "madge": "^3.6.0",
    "mkdirp": "^1.0.4",
    "node-emoji": "^1.5.1",
    "npm-run-batch": "0.0.9",
    "nyc": "^15.0.0-beta.3",
    "parse-git-config": "^3.0.0",
    "pkg-dir": "^4.2.0",
    "pkg-ok": "^2.3.1",
    "read-pkg-up": "^7.0.1",
    "remark": "^12.0.0",
    "rimraf": "^3.0.0",
    "sort-package-json": "^1.42.1",
    "tslint": "^6.1.1",
    "tslint-config-security": "^1.16.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.7.3",
    "typescript-formatter": "^7.2.2",
    "typestrict": "^1.0.2",
    "which": "^2.0.2"
  },
  "engines": {
    "node": ">=13.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "run-batch": {
    "build": [
      "format",
      "lint",
      "clean",
      "compile",
      "test",
      "no-circular-deps",
      "cloc",
      "todos",
      "todos-md"
    ],
    "qt": [
      "compile",
      "test-no-cover"
    ],
    "checks": [
      "lint",
      "check-coverage",
      "dep-check",
      "no-circular-deps",
      "pkg-ok",
      "staged-mods-ok"
    ],
    "postversion": [
      "changelog",
      "no-mods"
    ],
    "prepublishOnly": [
      "changelog",
      "no-mods"
    ],
    "pre-commit-hook": [
      "check-coverage",
      "dep-check",
      "pkg-ok",
      "staged-mods-ok"
    ],
    "pre-push-hook": [
      "secure",
      "no-mods"
    ],
    "cloc": [
      "cloc-md",
      "cloc-report",
      "cloc_"
    ],
    "dependency-upgrade": [
      "no-mods",
      "ensure-bins",
      "sort-package-json",
      "npm-check_",
      "upgrade_",
      "dep-check",
      "no-circular-deps",
      "git-add_",
      "build",
      "git-commit-upgrade_"
    ],
    "check-run-scripts": [
      "build",
      "qt",
      "checks",
      "pre-commit-hook",
      "pre-push-hook",
      "dependency-upgrade"
    ]
  },
  "devDependencies": {}
}
