{
  "name": "@tufan-io/simple-ci",
  "version": "0.3.4",
  "private": false,
  "description": "simple-ci - a batterries included CI, built to run on github-actions",
  "keywords": [],
  "homepage": "https://github.com/tufan-io/simple-ci#readme",
  "bugs": {
    "url": "https://github.com/tufan-io/simple-ci/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tufan-io/simple-ci.git"
  },
  "license": "Apache-2.0",
  "author": "tufan.io",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "simple-ci": "./dist/index.js"
  },
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist",
    "docs",
    "templates"
  ],
  "scripts": {
    "add-changelog": "git add docs/CHANGELOG.md",
    "build": "npm-run-batch",
    "changelog": "conventional-changelog -p angular -i docs/CHANGELOG.md -s",
    "check-coverage": "nyc check-coverage -x .tmp",
    "check-run-scripts": "run-batch",
    "checks": "run-batch",
    "clean": "rimraf dist .nyc_output coverage *.tsbuildinfo",
    "cloc": "run-batch",
    "cloc-cli": "cloc --exclude-dir=test --quiet --sum-one --hide-rate --unix ./src",
    "cloc-md": "cloc --exclude-dir=test --quiet --sum-one --hide-rate --unix --by-file --md --out=docs/cloc.md ./src",
    "cloc-report": "cloc --exclude-dir=test --quiet --sum-one --hide-rate --unix --out=docs/cloc.report ./src",
    "commit": "git-cz",
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "dep-check": "dependency-check . --missing -i tslib",
    "dependency-upgrade": "run-batch",
    "fetch-all-tags": "git fetch --all --tags",
    "format": "tsfmt -r",
    "git-add-all": "git add .",
    "git-push": "git push",
    "git-push-tags": "git push origin --tags",
    "git-upgrade-commit": "git diff-index --quiet HEAD || git commit -m \"chore: updating dependencies\"",
    "lint": "tslint -c tslint.json --project ./tsconfig.json --format stylish",
    "no-circular-deps": "madge --circular dist/index.js",
    "no-mods": "git-mods",
    "npm-check_": "npm-check -y",
    "nyc-report": "nyc report --reporter=text-summary",
    "pkg-ok": "pkg-ok",
    "pre-commit-hook": "run-batch",
    "pre-push-hook": "run-batch",
    "prepare": "which npm-check git-cz",
    "prepublishOnly": "run-batch",
    "qt": "run-batch",
    "secure": "npm audit",
    "sh": "npm-sh",
    "snapshots": "cross-env NODE_ENV=test ava --verbose --update-snapshots",
    "sort-package-json": "sort-package-json",
    "staged-mods-ok": "git-mods --staged_ok",
    "test": "cross-env NODE_ENV=test nyc -r lcov -r text-summary -r json-summary ava --verbose",
    "test-no-cover": "cross-env NODE_ENV=test ava --verbose",
    "todos": "leasot --exit-nicely --skip-unsupported ./src",
    "todos-md": "leasot --exit-nicely --skip-unsupported --reporter markdown ./src> ./docs/TODOs.md",
    "upgrade-all": "npm upgrade",
    "preversion": "run-batch",
    "version": "conventional-changelog -p angular -i docs/CHANGELOG.md -s && git add docs/CHANGELOG.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit-hook",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run pre-push-hook"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "changelog": {
        "disableEmoji": true
      },
      "path": "git-cz"
    }
  },
  "ava": {
    "files": [
      "dist/**/test.js",
      "dist/**/test/**/*.js",
      "!dist/**/test/fixtures/**/*.js",
      "!dist/**/helpers/**",
      "!.tmp"
    ]
  },
  "nyc": {
    "branches": 100,
    "exclude": [
      "**/test/**",
      "**/helpers/**",
      ".tmp/**"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "watermarks": {
      "branches": [
        100,
        100
      ],
      "functions": [
        100,
        100
      ],
      "lines": [
        100,
        100
      ],
      "statements": [
        100,
        100
      ]
    }
  },
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/fs-extra": "^9.0.6",
    "@types/inquirer": "^7.3.1",
    "@types/node": "^14.14.21",
    "ava": "^3.15.0",
    "cloc": "^2.7.0",
    "commitizen": "^4.2.3",
    "commitlint": "^11.0.0",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dependency-check": "^4.1.0",
    "fast-deep-equal": "^3.1.3",
    "fs-extra": "^9.0.1",
    "git-mods": "^1.0.10",
    "graceful-fs": "^4.2.4",
    "husky": "^4.3.8",
    "inquirer": "^7.3.3",
    "leasot": "^11.5.0",
    "madge": "^4.0.0",
    "mkdirp": "^1.0.4",
    "node-emoji": "^1.5.1",
    "npm-run-batch": "0.0.9",
    "nyc": "^15.1.0",
    "parse-git-config": "^3.0.0",
    "pkg-dir": "^5.0.0",
    "pkg-ok": "^2.3.1",
    "read-pkg-up": "^7.0.1",
    "remark": "^13.0.0",
    "rimraf": "^3.0.0",
    "sort-package-json": "^1.48.1",
    "tslint": "^6.1.3",
    "tslint-config-security": "^1.16.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^4.1.3",
    "typescript-formatter": "^7.2.2",
    "typestrict": "^1.0.2",
    "which": "^2.0.2",
    "yargs": "^15.3.1"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=13.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "run-batch": {
    "build": [
      "format",
      "lint",
      "clean",
      "compile",
      "test",
      "no-circular-deps",
      "cloc",
      "todos",
      "todos-md"
    ],
    "qt": [
      "compile",
      "test-no-cover"
    ],
    "checks": [
      "lint",
      "check-coverage",
      "dep-check",
      "no-circular-deps",
      "pkg-ok",
      "staged-mods-ok"
    ],
    "prepublishOnly": [
      "no-mods",
      "check-coverage",
      "git-push",
      "git-push-tags"
    ],
    "pre-commit-hook": [
      "check-coverage",
      "dep-check",
      "pkg-ok",
      "sort-package-json",
      "no-circular-deps",
      "staged-mods-ok"
    ],
    "pre-push-hook": [
      "secure",
      "no-mods"
    ],
    "cloc": [
      "cloc-md",
      "cloc-report",
      "cloc-cli"
    ],
    "dependency-upgrade": [
      "no-mods",
      "upgrade-all",
      "dep-check",
      "no-circular-deps",
      "git-add-all",
      "build",
      "git-upgrade-commit"
    ],
    "preversion": [
      "no-mods",
      "fetch-all-tags"
    ],
    "check-run-scripts": [
      "build",
      "qt",
      "checks",
      "pre-commit-hook",
      "pre-push-hook",
      "dependency-upgrade"
    ]
  }
}
